<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Queries</th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= link_to idea.title, idea %></td>
    <td><%= idea.canned_queries.any? ? idea.canned_queries.size : '' %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New idea', new_idea_path %>
